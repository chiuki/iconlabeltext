<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

  <ImageView
      android:id="@+id/flower_image"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="@+id/flower_label"
      app:layout_constraintBottom_toBottomOf="@+id/flower_text"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintDimensionRatio="1:1"
      app:srcCompat="@drawable/ic_flower"
      android:tint="@android:color/white"
      android:background="#8BC34A"
      android:contentDescription="@string/flower_label"/>

  <TextView
      android:id="@+id/flower_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#E91E63"
      app:layout_constraintLeft_toRightOf="@+id/flower_image"
      app:layout_constraintTop_toTopOf="parent"
      android:text="@string/flower_label"
      android:textColor="@android:color/white"
      android:textSize="16sp"/>

  <TextView
      android:id="@+id/flower_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="#673AB7"
      app:layout_constraintTop_toBottomOf="@+id/flower_label"
      app:layout_constraintLeft_toLeftOf="@+id/flower_label"
      android:text="@string/flower_text"
      android:textColor="@android:color/white"
      android:textSize="24sp"/>

</android.support.constraint.ConstraintLayout>